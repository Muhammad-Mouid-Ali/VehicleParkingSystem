<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f4f6f8; -fx-padding: 40px;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.controllers.ParkingOwnerDashboardController">

    <!-- Top Section -->
    <top>
        <VBox alignment="CENTER" spacing="20">
            <Label fx:id="welcomeLabel"
                   text="Welcome, Parking Owner!"
                   style="-fx-font-size: 28px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2c3e50;" />
        </VBox>
    </top>

    <!-- Center Section -->
    <center>
        <VBox alignment="CENTER" spacing="20">

            <!-- Title -->
            <Label text="Parking Owner Dashboard"
                   style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2c3e50;" />

            <!-- Add Ground Button -->
            <Button fx:id="addGroundButton"
                    onAction="#handleAddGround"
                    text="Add Parking Area"
                    style="-fx-background-color: #2ecc71;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-padding: 10px;
                           -fx-pref-width: 200px;
                           -fx-background-radius: 5px;" />

            <!-- Update Ground Button -->
            <Button fx:id="updateGroundButton"
                    onAction="#handleUpdateGround"
                    text="Update Parking Area"
                    style="-fx-background-color: #f39c12;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-padding: 10px;
                           -fx-pref-width: 200px;
                           -fx-background-radius: 5px;" />

            <!-- Remove Ground Button -->
            <Button fx:id="removeGroundButton"
                    onAction="#handleRemoveGround"
                    text="Remove Parking Area"
                    style="-fx-background-color: #e74c3c;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-padding: 10px;
                           -fx-pref-width: 200px;
                           -fx-background-radius: 5px;" />

            <!-- Scheduled Bookings Button -->
            <Button fx:id="scheduledBookingsButton"
                    onAction="#handleScheduledBookings"
                    text="Scheduled Bookings"
                    style="-fx-background-color: #3498db;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-padding: 10px;
                           -fx-pref-width: 200px;
                           -fx-background-radius: 5px;" />

            <!-- Logout Button -->
            <Button fx:id="logoutButton"
                    onAction="#handleLogout"
                    text="Logout"
                    style="-fx-background-color: #9b59b6;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-padding: 10px;
                           -fx-pref-width: 200px;
                           -fx-background-radius: 5px;" />
        </VBox>
    </center>
</BorderPane>
