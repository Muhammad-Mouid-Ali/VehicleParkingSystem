<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20"
      style="-fx-background-color: #eaf4fb;
             -fx-padding: 40px;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.controllers.UserLoginController">

    <!-- Title Label -->
    <Label text="ParkEase"
           style="-fx-font-size: 30px;
                  -fx-font-weight: bold;
                  -fx-text-fill: #2c3e50;" />

    <Label text="User Login"
           style="-fx-font-size: 24px;
                  -fx-font-weight: bold;
                  -fx-text-fill: #2c3e50;" />

    <!-- Username Field -->
    <TextField fx:id="usernameField"
               promptText="Enter Username"
               style="-fx-pref-width: 300px;
                      -fx-font-size: 14px;" />

    <!-- Password Field -->
    <PasswordField fx:id="passwordField"
                   promptText="Enter Password"
                   style="-fx-pref-width: 300px;
                          -fx-font-size: 14px;" />

    <!-- Login Button -->
    <Button fx:id="Login"
            onAction="#handleLogin"
            text="Login"
            style="-fx-background-color: #3498db;
                   -fx-text-fill: white;
                   -fx-pref-width: 300px;
                   -fx-font-size: 14px;
                   -fx-padding: 10px;
                   -fx-border-radius: 5px;
                   -fx-background-radius: 5px;" />

    <!-- Sign Up Button -->
    <Button fx:id="SignUp"
            onAction="#handleSignUp"
            text="Sign Up"
            style="-fx-background-color: #2ecc71;
                   -fx-text-fill: white;
                   -fx-pref-width: 300px;
                   -fx-font-size: 14px;
                   -fx-padding: 10px;
                   -fx-border-radius: 5px;
                   -fx-background-radius: 5px;" />

    <!-- Error Message Label -->
    <Label fx:id="messageLabel"
           text=""
           style="-fx-font-size: 14px;
                  -fx-font-weight: bold;
                  -fx-text-fill: red;" />
</VBox>
