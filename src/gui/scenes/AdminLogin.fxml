<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20"
      style="-fx-background-color: #eaf4fb;
             -fx-padding: 40px;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.controllers.AdminLoginController">

    <!-- Title -->
    <VBox alignment="CENTER">
        <Label text="ParkEase"
               style="-fx-font-size: 30px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #2c3e50;" />
        <Label text="Admin Login"
               style="-fx-font-size: 22px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #2c3e50;" />
    </VBox>

    <!-- Username Field -->
    <TextField fx:id="usernameField"
               promptText="Enter Admin Username"
               style="-fx-pref-width: 300px;
                      -fx-font-size: 14px;" />

    <!-- Password Field -->
    <PasswordField fx:id="passwordField"
                   promptText="Enter Password"
                   style="-fx-pref-width: 300px;
                          -fx-font-size: 14px;" />

    <!-- Login Button -->
    <Button fx:id="loginButton"
            onAction="#handleLogin"
            text="Login"
            style="-fx-background-color: #3498db;
                   -fx-text-fill: white;
                   -fx-pref-width: 150px;
                   -fx-font-size: 14px;
                   -fx-padding: 10px;
                   -fx-border-radius: 5px;
                   -fx-background-radius: 5px;" />

    <!-- Back Button -->
    <Button fx:id="backButton"
            onAction="#handleBack"
            text="Back"
            style="-fx-background-color: #2ecc71;
                   -fx-text-fill: white;
                   -fx-pref-width: 150px;
                   -fx-font-size: 14px;
                   -fx-padding: 10px;
                   -fx-border-radius: 5px;
                   -fx-background-radius: 5px;" />

    <!-- Error Message Label -->
    <Label fx:id="messageLabel"
           text=""
           style="-fx-text-fill: red;
                  -fx-font-size: 12px;" />
</VBox>
