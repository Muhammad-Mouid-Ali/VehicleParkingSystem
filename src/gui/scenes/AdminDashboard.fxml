<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f4f6f8; -fx-padding: 40px;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.controllers.AdminDashboardController">

    <!-- Top Section -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <!-- Welcome Label -->
            <Label text="Welcome Admin!"
                   style="-fx-font-size: 26px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2c3e50;" />

            <!-- Main Heading -->
            <Label text="Admin Dashboard"
                   style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2c3e50;" />
        </VBox>
    </top>

    <!-- Center Section -->
    <center>
        <VBox alignment="CENTER" spacing="20">

            <!-- Verify Ground Button -->
            <Button fx:id="verifyGroundButton"
                    onAction="#handleVerifyGround"
                    text="Verify Parking Areas"
                    style="-fx-background-color: #2ecc71;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-padding: 10px;
                           -fx-pref-width: 200px;
                           -fx-background-radius: 5px;" />

            <!-- Handle Complaints Button -->
            <Button fx:id="handleComplaintsButton"
                    onAction="#handleHandleComplaints"
                    text="Handle Complaints"
                    style="-fx-background-color: #f39c12;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-padding: 10px;
                           -fx-pref-width: 200px;
                           -fx-background-radius: 5px;" />

            <!-- Logout Button -->
            <Button fx:id="logoutButton"
                    onAction="#handleLogout"
                    text="Logout"
                    style="-fx-background-color: #e74c3c;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-padding: 10px;
                           -fx-pref-width: 200px;
                           -fx-background-radius: 5px;" />
        </VBox>
    </center>
</BorderPane>
